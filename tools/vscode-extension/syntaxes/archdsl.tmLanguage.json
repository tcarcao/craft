{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Domain DSL",
  "scopeName": "source.archdsl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#arch"
    },
    {
      "include": "#services"
    },
    {
      "include": "#single_service"
    },
    {
      "include": "#exposure"
    },
    {
      "include": "#use_case"
    },
    {
      "include": "#domain_definition"
    },
    {
      "include": "#domains_definition"
    },
    {
      "include": "#when_external_trigger"
    },
    {
      "include": "#when_quoted_event"
    },
    {
      "include": "#when_domain_listens"
    },
    {
      "include": "#when_cron_trigger"
    },
    {
      "include": "#sync_action"
    },
    {
      "include": "#async_action"
    },
    {
      "include": "#internal_action"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#braces"
    },
    {
      "include": "#colons"
    },
    {
      "include": "#commas"
    },
    {
      "include": "#percentages"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.domain-dsl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.domain-dsl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "services": {
      "name": "meta.services.domain-dsl",
      "begin": "^\\s*(services)\\s*(\\{)",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.services.domain-dsl"
        },
        "2": {
          "name": "punctuation.section.braces.begin.domain-dsl"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.domain-dsl"
        }
      },
      "patterns": [
        {
          "include": "#service_definition"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "service_definition": {
      "name": "meta.service-definition.domain-dsl",
      "begin": "^\\s*([a-zA-Z_][a-zA-Z0-9_-]*|\"[^\"]*\")\\s*(\\{)",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "entity.name.type.service.domain-dsl"
        },
        "2": {
          "name": "punctuation.section.braces.begin.domain-dsl"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.domain-dsl"
        }
      },
      "patterns": [
        {
          "include": "#service_properties"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "single_service": {
      "name": "meta.single-service.domain-dsl",
      "begin": "^\\s*(service)\\s+([a-zA-Z_][a-zA-Z0-9_-]*|\"[^\"]*\")\\s*(\\{)",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.service.domain-dsl"
        },
        "2": {
          "name": "entity.name.type.service.domain-dsl"
        },
        "3": {
          "name": "punctuation.section.braces.begin.domain-dsl"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.domain-dsl"
        }
      },
      "patterns": [
        {
          "include": "#service_properties"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "service_properties": {
      "patterns": [
        {
          "include": "#domains_property"
        },
        {
          "include": "#datastores_property"
        },
        {
          "include": "#language_property"
        },
        {
          "include": "#deployment_property"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "domains_property": {
      "name": "meta.domains-property.domain-dsl",
      "begin": "\\b(domains)\\s*(:)",
      "end": "(?=\\}|^\\s*[a-zA-Z])",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.property.domains.domain-dsl"
        },
        "2": {
          "name": "punctuation.separator.colon.domain-dsl"
        }
      },
      "patterns": [
        {
          "name": "entity.name.type.domain.list.domain-dsl",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "punctuation.separator.comma.domain-dsl",
          "match": ","
        },
        {
          "include": "#comments"
        }
      ]
    },
    "datastores_property": {
      "name": "meta.datastores-property.domain-dsl",
      "begin": "\\b(data-stores)\\s*(:)",
      "end": "(?=\\}|^\\s*[a-zA-Z])",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.property.datastores.domain-dsl"
        },
        "2": {
          "name": "punctuation.separator.colon.domain-dsl"
        }
      },
      "patterns": [
        {
          "name": "entity.name.type.datastore.domain-dsl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*\\b"
        },
        {
          "name": "punctuation.separator.comma.domain-dsl",
          "match": ","
        },
        {
          "include": "#comments"
        }
      ]
    },
    "language_property": {
      "name": "meta.language-property.domain-dsl",
      "begin": "\\b(language)\\s*(:)",
      "end": "(?=\\}|^\\s*[a-zA-Z])",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.property.language.domain-dsl"
        }
      },
      "patterns": [
        {
          "name": "entity.name.type.language.domain-dsl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*\\b"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "deployment_property": {
      "name": "meta.deployment-property.domain-dsl",
      "begin": "\\b(deployment)\\s*(:)",
      "end": "(?=\\}|^\\s*[a-zA-Z])",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.property.deployment.domain-dsl"
        },
        "2": {
          "name": "punctuation.separator.colon.domain-dsl"
        }
      },
      "patterns": [
        {
          "name": "keyword.other.deployment-type.domain-dsl",
          "match": "\\b(canary|blue_green|rolling)\\b"
        },
        {
          "name": "constant.numeric.percentage.domain-dsl",
          "match": "[0-9]+%"
        },
        {
          "name": "punctuation.section.parentheses.domain-dsl",
          "match": "[()]"
        },
        {
          "name": "keyword.operator.arrow.domain-dsl",
          "match": "->"
        },
        {
          "name": "entity.name.type.deployment-target.domain-dsl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*\\b"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "domain_list": {
      "patterns": [
        {
          "name": "entity.name.type.domain.list.domain-dsl",
          "match": "[A-Z][a-zA-Z0-9_]*"
        },
        {
          "name": "punctuation.separator.comma.domain-dsl",
          "match": ","
        }
      ]
    },
    "datastore_list": {
      "patterns": [
        {
          "name": "entity.name.type.datastore.domain-dsl",
          "match": "[a-zA-Z_][a-zA-Z0-9_-]*"
        },
        {
          "name": "punctuation.separator.comma.domain-dsl",
          "match": ","
        }
      ]
    },
    "use_case": {
      "name": "meta.use-case.domain-dsl",
      "begin": "^\\s*(use_case)\\s+(\"[^\"]*\")\\s*(\\{)",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.flow.domain-dsl"
        },
        "2": {
          "name": "string.quoted.double.usecase.domain-dsl"
        },
        "3": {
          "name": "punctuation.section.braces.begin.domain-dsl"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.domain-dsl"
        }
      },
      "patterns": [
        {
          "include": "#when_external_trigger"
        },
        {
          "include": "#when_quoted_event"
        },
        {
          "include": "#when_domain_listens"
        },
        {
          "include": "#sync_action"
        },
        {
          "include": "#async_action"
        },
        {
          "include": "#internal_action"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "when_external_trigger": {
      "match": "^\\s*(when)\\s+([A-Z][a-zA-Z0-9_]*)\\s+([a-z][a-zA-Z0-9_]+)\\s+(.*)$",
      "captures": {
        "1": {
          "name": "keyword.control.flow.domain-dsl"
        },
        "2": {
          "name": "entity.name.class.actor.domain-dsl"
        },
        "3": {
          "name": "entity.name.function.verb.domain-dsl"
        },
        "4": {
          "name": "string.unquoted.remainder.domain-dsl"
        }
      }
    },
    "when_quoted_event": {
      "match": "^\\s*(when)\\s+(\"[^\"]*\")",
      "captures": {
        "1": {
          "name": "keyword.control.flow.domain-dsl"
        },
        "2": {
          "name": "string.quoted.double.event.domain-dsl"
        }
      }
    },
    "when_domain_listens": {
      "match": "^\\s*(when)\\s+([A-Z][a-zA-Z0-9_]*)\\s+(listens)\\s+(\"[^\"]*\")",
      "captures": {
        "1": {
          "name": "keyword.control.flow.domain-dsl"
        },
        "2": {
          "name": "entity.name.type.domain.domain-dsl"
        },
        "3": {
          "name": "keyword.other.listens.domain-dsl"
        },
        "4": {
          "name": "string.quoted.double.event.domain-dsl"
        }
      }
    },
    "sync_action": {
      "patterns": [
        {
          "name": "meta.sync.with-connector.domain-dsl",
          "match": "^\\s*([A-Z][a-zA-Z0-9_]*)\\s+(asks)\\s+([A-Z][a-zA-Z0-9_]*)\\s+(a|an|the|as|to|from|in|on|at|for|with|by)\\s+(.*)$",
          "captures": {
            "1": {
              "name": "entity.name.type.domain.source.domain-dsl"
            },
            "2": {
              "name": "keyword.other.asks.domain-dsl"
            },
            "3": {
              "name": "entity.name.type.domain.target.domain-dsl"
            },
            "4": {
              "name": "keyword.other.connector.domain-dsl"
            },
            "5": {
              "name": "string.unquoted.phrase.domain-dsl"
            }
          }
        },
        {
          "name": "meta.sync.no-connector.domain-dsl",
          "match": "^\\s*([A-Z][a-zA-Z0-9_]*)\\s+(asks)\\s+([A-Z][a-zA-Z0-9_]*)\\s+(.*)$",
          "captures": {
            "1": {
              "name": "entity.name.type.domain.source.domain-dsl"
            },
            "2": {
              "name": "keyword.other.asks.domain-dsl"
            },
            "3": {
              "name": "entity.name.type.domain.target.domain-dsl"
            },
            "4": {
              "name": "string.unquoted.phrase.domain-dsl"
            }
          }
        }
      ]
    },
    "async_action": {
      "match": "^\\s*([A-Z][a-zA-Z0-9_]*)\\s+(notifies)\\s+(\"[^\"]*\")",
      "captures": {
        "1": {
          "name": "entity.name.type.domain.domain-dsl"
        },
        "2": {
          "name": "keyword.other.notifies.domain-dsl"
        },
        "3": {
          "name": "string.quoted.double.event.domain-dsl"
        }
      }
    },
    "internal_action": {
      "patterns": [
        {
          "name": "meta.internal.with-connector.domain-dsl",
          "match": "^\\s*([A-Z][a-zA-Z0-9_]*)\\s+([a-z][a-zA-Z0-9_]+)\\s+(a|an|the|as|to|from|in|on|at|for|with|by)\\s+(.*)$",
          "captures": {
            "1": {
              "name": "entity.name.type.domain.domain-dsl"
            },
            "2": {
              "name": "entity.name.function.verb.domain-dsl"
            },
            "3": {
              "name": "keyword.other.connector.domain-dsl"
            },
            "4": {
              "name": "string.unquoted.phrase.domain-dsl"
            }
          }
        },
        {
          "name": "meta.internal.no-connector.domain-dsl",
          "match": "^\\s*([A-Z][a-zA-Z0-9_]*)\\s+([a-z][a-zA-Z0-9_]+)\\s+(.*)$",
          "captures": {
            "1": {
              "name": "entity.name.type.domain.domain-dsl"
            },
            "2": {
              "name": "entity.name.function.verb.domain-dsl"
            },
            "3": {
              "name": "string.unquoted.phrase.domain-dsl"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.domain-dsl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.domain-dsl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "braces": {
      "patterns": [
        {
          "name": "punctuation.section.braces.begin.domain-dsl",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.domain-dsl",
          "match": "\\}"
        }
      ]
    },
    "colons": {
      "patterns": [
        {
          "name": "punctuation.separator.colon.domain-dsl",
          "match": ":"
        }
      ]
    },
    "commas": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.domain-dsl",
          "match": ","
        }
      ]
    },
    "arch": {
      "name": "meta.arch.domain-dsl",
      "begin": "^\\s*(arch)\\s*([a-zA-Z_][a-zA-Z0-9_]*)?\\s*(\\{)",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.arch.domain-dsl"
        },
        "2": {
          "name": "entity.name.type.arch.domain-dsl"
        },
        "3": {
          "name": "punctuation.section.braces.begin.domain-dsl"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.domain-dsl"
        }
      },
      "patterns": [
        {
          "include": "#arch_sections"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "arch_sections": {
      "patterns": [
        {
          "name": "meta.presentation-section.domain-dsl",
          "begin": "\\b(presentation)\\s*(:)",
          "end": "(?=\\}|^\\s*(gateway|presentation))",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.section.presentation.domain-dsl"
            },
            "2": {
              "name": "punctuation.separator.colon.domain-dsl"
            }
          },
          "patterns": [
            {
              "include": "#arch_components"
            }
          ]
        },
        {
          "name": "meta.gateway-section.domain-dsl",
          "begin": "\\b(gateway)\\s*(:)",
          "end": "(?=\\}|^\\s*(gateway|presentation))",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.section.gateway.domain-dsl"
            },
            "2": {
              "name": "punctuation.separator.colon.domain-dsl"
            }
          },
          "patterns": [
            {
              "include": "#arch_components"
            }
          ]
        }
      ]
    },
    "arch_components": {
      "patterns": [
        {
          "name": "entity.name.type.component.domain-dsl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*(?:\\[|>|$))"
        },
        {
          "name": "keyword.operator.component-flow.domain-dsl",
          "match": ">"
        },
        {
          "name": "meta.component-modifiers.domain-dsl",
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": {
              "name": "punctuation.section.brackets.begin.domain-dsl"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.section.brackets.end.domain-dsl"
            }
          },
          "patterns": [
            {
              "name": "meta.modifier-key-value.domain-dsl",
              "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)\\s*([a-zA-Z0-9_.-]+|\\d+[a-zA-Z]*|true|false)",
              "captures": {
                "1": {
                  "name": "entity.name.attribute.modifier-key.domain-dsl"
                },
                "2": {
                  "name": "punctuation.separator.colon.domain-dsl"
                },
                "3": {
                  "name": "constant.other.modifier-value.domain-dsl"
                }
              }
            },
            {
              "name": "entity.name.attribute.modifier-flag.domain-dsl",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?!:)"
            },
            {
              "name": "punctuation.separator.comma.domain-dsl",
              "match": ","
            }
          ]
        }
      ]
    },
    "exposure": {
      "name": "meta.exposure.domain-dsl",
      "begin": "^\\s*(exposure)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\{)",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.exposure.domain-dsl"
        },
        "2": {
          "name": "entity.name.type.exposure.domain-dsl"
        },
        "3": {
          "name": "punctuation.section.braces.begin.domain-dsl"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.domain-dsl"
        }
      },
      "patterns": [
        {
          "include": "#exposure_properties"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "exposure_properties": {
      "patterns": [
        {
          "name": "meta.exposure-to.domain-dsl",
          "begin": "\\b(to)\\s*(:)",
          "end": "(?=\\}|^\\s*[a-zA-Z])",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.property.to.domain-dsl"
            },
            "2": {
              "name": "punctuation.separator.colon.domain-dsl"
            }
          },
          "patterns": [
            {
              "name": "entity.name.type.target.domain-dsl",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            },
            {
              "name": "punctuation.separator.comma.domain-dsl",
              "match": ","
            }
          ]
        },
        {
          "name": "meta.exposure-of.domain-dsl",
          "begin": "\\b(of)\\s*(:)",
          "end": "(?=\\}|^\\s*[a-zA-Z])",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.property.of.domain-dsl"
            },
            "2": {
              "name": "punctuation.separator.colon.domain-dsl"
            }
          },
          "patterns": [
            {
              "name": "entity.name.type.domain.domain-dsl",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            },
            {
              "name": "punctuation.separator.comma.domain-dsl",
              "match": ","
            }
          ]
        },
        {
          "name": "meta.exposure-through.domain-dsl",
          "begin": "\\b(through)\\s*(:)",
          "end": "(?=\\}|^\\s*[a-zA-Z])",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.property.through.domain-dsl"
            },
            "2": {
              "name": "punctuation.separator.colon.domain-dsl"
            }
          },
          "patterns": [
            {
              "name": "entity.name.type.gateway.domain-dsl",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            },
            {
              "name": "punctuation.separator.comma.domain-dsl",
              "match": ","
            }
          ]
        }
      ]
    },
    "when_cron_trigger": {
      "match": "^\\s*(when)\\s+(CRON)\\s+(.*)$",
      "captures": {
        "1": {
          "name": "keyword.control.flow.domain-dsl"
        },
        "2": {
          "name": "keyword.other.cron.domain-dsl"
        },
        "3": {
          "name": "string.unquoted.cron-description.domain-dsl"
        }
      }
    },
    "percentages": {
      "patterns": [
        {
          "name": "constant.numeric.percentage.domain-dsl",
          "match": "[0-9]+%"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.domain-dsl",
          "match": "->"
        },
        {
          "name": "keyword.operator.component-flow.domain-dsl",
          "match": ">"
        }
      ]
    },
    "domain_definition": {
      "name": "meta.domain-definition.domain-dsl",
      "begin": "^\\s*(domain)\\s+([a-zA-Z_][a-zA-Z0-9_.-]*)\\s*(\\{)",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.domain.domain-dsl"
        },
        "2": {
          "name": "entity.name.type.domain-name.domain-dsl"
        },
        "3": {
          "name": "punctuation.section.braces.begin.domain-dsl"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.domain-dsl"
        }
      },
      "patterns": [
        {
          "include": "#subdomain_list"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "domains_definition": {
      "name": "meta.domains-definition.domain-dsl",
      "begin": "^\\s*(domains)\\s*(\\{)",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.domains.domain-dsl"
        },
        "2": {
          "name": "punctuation.section.braces.begin.domain-dsl"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.domain-dsl"
