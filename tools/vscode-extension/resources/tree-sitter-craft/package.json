{
  "name": "tree-sitter-craft",
  "version": "1.0.0",
  "description": "Tree-sitter grammar for Craft DSL",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tcarcao/tree-sitter-craft.git"
  },
  "license": "MIT",
  "keywords": [
    "tree-sitter",
    "parser",
    "craft",
    "dsl"
  ],
  "main": "bindings/node",
  "types": "bindings/node",
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp-build": "^4.8.4"
  },
  "peerDependencies": {
    "tree-sitter": "^0.25.0"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "node-gyp": "^10.3.1",
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.25.10",
    "tree-sitter-javascript": "^0.25.0"
  },
  "scripts": {
    "build": "tree-sitter generate && node-gyp rebuild",
    "build-wasm": "./build.sh",
    "build-force": "./build-force.sh",
    "dev": "./dev.sh",
    "dev-wasm": "./dev.sh --wasm",
    "test": "npx tree-sitter test",
    "setup": "./setup-docker.sh",
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip",
    "prebuild": "prebuildify --napi --strip --target 18.0.0 --target 20.0.0 --target 22.0.0",
    "prebuild-electron": "prebuildify --napi --strip --electron --electron-compat",
    "prebuild-all": "prebuildify-cross --napi --strip"
  },
  "directories": {
    "test": "test"
  },
  "tree-sitter": [
    {
      "scope": "source.craft",
      "file-types": [
        "craft"
      ]
    }
  ]
}
