{
  "name": "Craft DSL Light",
  "type": "light",
  "colors": {
    "editor.background": "#ffffff",
    "editor.foreground": "#000000",
    "editor.lineHighlightBackground": "#f5f5f5",
    "editor.selectionBackground": "#add6ff"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": [
        "comment.line.double-slash.craft",
        "comment.block.craft"
      ],
      "settings": {
        "foreground": "#008000",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Keywords (use_case, when)",
      "scope": "keyword.control.flow.craft",
      "settings": {
        "foreground": "#800080",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Block Keywords (services, arch, exposure, domain, domains, actor, actors)",
      "scope": [
        "keyword.control.services.craft",
        "keyword.control.arch.craft",
        "keyword.control.exposure.craft",
        "keyword.control.domain.craft",
        "keyword.control.domains.craft",
        "keyword.control.actor.craft",
        "keyword.control.actors.craft"
      ],
      "settings": {
        "foreground": "#800080",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Use Case Name",
      "scope": "string.quoted.double.usecase.craft",
      "settings": {
        "foreground": "#0070C1",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Service Name",
      "scope": "entity.name.type.service.craft",
      "settings": {
        "foreground": "#0070C1",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Property Keywords (domains, data-stores)",
      "scope": [
        "keyword.other.property.domains.craft",
        "keyword.other.property.datastores.craft",
        "keyword.other.property.data-stores.craft",
        "keyword.other.property.language.craft",
        "keyword.other.property.deployment.craft",
        "keyword.other.property.to.craft",
        "keyword.other.property.of.craft",
        "keyword.other.property.through.craft"
      ],
      "settings": {
        "foreground": "#d73a49",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Event Strings",
      "scope": "string.quoted.double.event.craft",
      "settings": {
        "foreground": "#001080",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Domain Names (all types)",
      "scope": [
        "entity.name.type.domain.craft",
        "entity.name.type.domain.source.craft",
        "entity.name.type.domain.target.craft",
        "entity.name.type.domain.list.craft"
      ],
      "settings": {
        "foreground": "#267f99",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Domain Definition Names",
      "scope": "entity.name.type.domain-name.craft",
      "settings": {
        "foreground": "#0070C1",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Subdomain Names",
      "scope": "entity.name.type.subdomain.craft",
      "settings": {
        "foreground": "#22863a",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Data Store Names",
      "scope": "entity.name.type.datastore.craft",
      "settings": {
        "foreground": "#e36209",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Phrase Words",
      "scope": "entity.name.variable.phrase.craft",
      "settings": {
        "foreground": "#a31515",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Modifier Keys",
      "scope": "entity.name.tag.modifier.key.craft",
      "settings": {
        "foreground": "#0451a5",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Modifier Values",
      "scope": "entity.name.tag.modifier.value.craft",
      "settings": {
        "foreground": "#0969da",
        "fontStyle": "normal"
      }
    },
    {
      "name": "Flow Arrows",
      "scope": "punctuation.separator.arrow.craft",
      "settings": {
        "foreground": "#cf222e",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Datastore Names",
      "scope": "entity.name.type.datastore.craft",
      "settings": {
        "foreground": "#6f42c1",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Language",
      "scope": "entity.name.type.language.craft",
      "settings": {
        "foreground": "#6f42c1",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Actor Names (in use cases)",
      "scope": "entity.name.class.actor.craft",
      "settings": {
        "foreground": "#b8860b",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Actor Types (user, system, service)",
      "scope": "keyword.other.actor-type.craft",
      "settings": {
        "foreground": "#d73a49",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Actor Definition Names",
      "scope": "entity.name.type.actor-name.craft",
      "settings": {
        "foreground": "#0070C1",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Regular Verbs",
      "scope": "entity.name.function.verb.craft",
      "settings": {
        "foreground": "#795e26",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Special Verb: asks (request)",
      "scope": "keyword.other.asks.craft",
      "settings": {
        "foreground": "#e36209",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Special Verb: notifies (async)",
      "scope": "keyword.other.notifies.craft",
      "settings": {
        "foreground": "#22863a",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Special Keywords (listens, returns, CRON)",
      "scope": [
        "keyword.other.listens.craft",
        "keyword.other.returns.craft",
        "keyword.other.cron.craft"
      ],
      "settings": {
        "foreground": "#22863a",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Connectors (a, an, the, to, from, etc.)",
      "scope": "keyword.other.connector.craft",
      "settings": {
        "foreground": "#6a737d"
      }
    },
    {
      "name": "Phrases (action descriptions)",
      "scope": "string.unquoted.phrase.craft",
      "settings": {
        "foreground": "#a31515",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Remainder (after actor verb)",
      "scope": "string.unquoted.remainder.craft",
      "settings": {
        "foreground": "#a31515"
      }
    },
    {
      "name": "Regular Strings",
      "scope": "string.quoted.double.craft",
      "settings": {
        "foreground": "#a31515"
      }
    },
    {
      "name": "Punctuation - Braces",
      "scope": [
        "punctuation.section.braces.begin.craft",
        "punctuation.section.braces.end.craft"
      ],
      "settings": {
        "foreground": "#b8860b",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Punctuation - Colons",
      "scope": "punctuation.separator.colon.craft",
      "settings": {
        "foreground": "#6a737d"
      }
    },
    {
      "name": "Punctuation - Commas",
      "scope": "punctuation.separator.comma.craft",
      "settings": {
        "foreground": "#6a737d"
      }
    },
    {
      "name": "Architecture Components",
      "scope": [
        "entity.name.type.component.craft",
        "entity.name.type.arch.craft"
      ],
      "settings": {
        "foreground": "#0451a5",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Architecture Sections",
      "scope": [
        "keyword.other.section.presentation.craft",
        "keyword.other.section.gateway.craft"
      ],
      "settings": {
        "foreground": "#d73a49",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Component Modifier Keys",
      "scope": [
        "entity.name.attribute.modifier-key.craft",
        "entity.name.attribute.modifier-flag.craft"
      ],
      "settings": {
        "foreground": "#0451a5",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Component Modifier Values",
      "scope": "constant.other.modifier-value.craft",
      "settings": {
        "foreground": "#22863a",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Exposure Elements",
      "scope": [
        "entity.name.type.exposure.craft",
        "entity.name.type.target.craft",
        "entity.name.type.gateway.craft"
      ],
      "settings": {
        "foreground": "#e36209",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Deployment Configuration",
      "scope": [
        "keyword.other.deployment-type.craft",
        "entity.name.type.deployment-target.craft"
      ],
      "settings": {
        "foreground": "#b8860b",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Percentages",
      "scope": "constant.numeric.percentage.craft",
      "settings": {
        "foreground": "#09885a",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Operators and Flow",
      "scope": [
        "keyword.operator.arrow.craft",
        "keyword.operator.component-flow.craft"
      ],
      "settings": {
        "foreground": "#d73a49",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Brackets",
      "scope": [
        "punctuation.section.brackets.begin.craft",
        "punctuation.section.brackets.end.craft"
      ],
      "settings": {
        "foreground": "#6f42c1"
      }
    },
    {
      "name": "Parentheses",
      "scope": "punctuation.section.parentheses.craft",
      "settings": {
        "foreground": "#795e26"
      }
    },
    {
      "name": "CRON Description",
      "scope": "string.unquoted.cron-description.craft",
      "settings": {
        "foreground": "#a31515",
        "fontStyle": "italic"
      }
    }
  ]
}